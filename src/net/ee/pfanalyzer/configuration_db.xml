<?xml version="1.0" encoding="US-ASCII" standalone="yes"?>
<power_flow_case xmlns="http://www.mehg.net/schema/PowerFlowAnalyzer">
    <model-db>
        <modelClass ID="conf" label="Configuration">
            <modelClass ID="dialog" label="Dialog">
                <modelClass ID="viewer" label="Viewer Dialog">
                    <modelClass ID="network" label="Network" description="">
                        <model ID="export_image" label="Export Image">
                            <parameter ID="IMAGE_WIDTH" type="integer" label="Image width" description="The width of the output file in pixels" value="600.0">
                                <display increment="100.0" min="0.0"/>
                            </parameter>
                            <parameter ID="IMAGE_HEIGHT" type="integer" label="Image height" description="The height of the output file in pixels" value="800.0">
                                <display increment="100.0" min="0.0"/>
                            </parameter>
                            <parameter ID="IMAGE_COMPRESSION_QUALITY" type="double" label="Compression quality" description="Sets the quality of the JPEG image. &lt;br&gt;Must be between 0 and 1 (both inclusive). &lt;br&gt;A higher value means a higher quality, i.e. a lesser compression." value="1">
                                <display decimalFormatPattern="#.##" increment="0.1" max="1.0" min="0.0"/>
                            </parameter>
                            <parameter ID="IMAGE_FILE" type="text" label="Output file (JPEG)" description="The path of the output file. &lt;br&gt;May be relative to the current power flow case." restriction="file" empty="true">
                                <display/>
                            </parameter>
                        </model>
                    </modelClass>
                </modelClass>
            </modelClass>
            <modelClass ID="viewer" label="Viewer">
                <parameter ID="TITLE" type="text" label="Title" description="The title of this viewer" empty="true">
                    <display/>
                </parameter>
                <parameter ID="POSITION" type="text" label="Position" description="&lt;html&gt;The position of this viewer.&lt;br&gt;Possible values are:&lt;ul&gt;&lt;li&gt;Left: positioned at the left&lt;/li&gt;&lt;li&gt;Bottom: positioned at the bottom&lt;/li&gt;&lt;li&gt;Free: displayed in an external window&lt;/li&gt;&lt;/ul&gt;The default position is &quot;bottom&quot;." restriction="list" empty="true">
                    <option value="left" label="Left" ID="LEFT"/>
                    <option value="right" label="Right" ID="RIGHT"/>
                    <option value="bottom" label="Bottom" ID="BOTTOM"/>
                    <option value="free" label="Free" ID="FREE"/>
                    <display/>
                </parameter>
                <parameter ID="ICON" type="text" label="Icon" empty="true">
                    <display/>
                </parameter>
                <parameter ID="WIDTH" type="integer" label="Width" value="300.0">
                    <display min="10.0"/>
                </parameter>
                <parameter ID="HEIGHT" type="integer" label="Height" value="300.0">
                    <display min="10.0"/>
                </parameter>
                <modelClass ID="element" label="Element">
                    <model ID="viewer" label="Network Browser" description="A viewer allowing to navigate through the network and &lt;br&gt;to view and edit network elements. ">
                        <parameter ID="POSITION" value="right"/>
                        <parameter ID="ICON" value="application_form.png"/>
                        <parameter ID="VIEWER_AREA_NAME" type="text" label="Label" value="Area">
                            <display section="Grouping Attributes" group="Area"/>
                        </parameter>
                        <parameter ID="VIEWER_AREA_PARAMETER" type="text" label="Parameter" value="BUS_AREA">
                            <display section="Grouping Attributes" group="Area"/>
                        </parameter>
                        <parameter ID="GROUP_BUS_BY_AREA" type="boolean" label="Group by area" value="true">
                            <display group="Group Busses"/>
                        </parameter>
                        <parameter ID="GROUP_BUS_BY_LOCATION" type="boolean" label="Group by coordinates" value="true">
                            <display group="Group Busses"/>
                        </parameter>
                        <parameter ID="GROUP_BRANCH_BY_AREA" type="boolean" label="Group by area and tie lines" value="true">
                            <display group="Group Branches"/>
                        </parameter>
                        <parameter ID="GROUP_BRANCH_BY_LOCATION" type="boolean" label="Group by coordinates" value="true">
                            <display group="Group Branches"/>
                        </parameter>
                        <parameter ID="GROUP_BRANCH_BY_VOLTAGE" type="boolean" label="Group by voltage level" value="true">
                            <display group="Group Branches"/>
                        </parameter>
                        <parameter ID="GROUP_ELEMENTS_BY_AREA" type="boolean" label="Group by area" value="true">
                            <display group="Group other elements"/>
                        </parameter>
                        <parameter ID="GROUP_ELEMENTS_BY_LOCATION" type="boolean" label="Group by coordinates" value="true">
                            <display group="Group other elements"/>
                        </parameter>
                        <parameter ID="SHOW_NETWORK_PARAMETERS" type="boolean" label="Show global network parameters" value="true">
                            <display/>
                        </parameter>
                        <parameter ID="SHOW_SUMS_OF_VALUES" type="boolean" label="Show sums of elements" value="true">
                            <display/>
                        </parameter>
                    </model>
                </modelClass>
                <modelClass ID="network" label="Network">
                    <parameter ID="POSITION" value="left"/>
                    <parameter ID="ZOOM" type="integer" label="Zoom" restriction="list" value="0" empty="false">
                        <option value="0" label="Best fit" ID="BEST_FIT"/>
                        <option value="1" label="Custom" ID="CUSTOM"/>
                        <option value="2" label="Germany" ID="GERMANY"/>
                        <display group="View"/>
                    </parameter>
                    <parameter ID="SHOW_LEGEND" type="boolean" label="Show Legend" value="true">
                        <display group="View"/>
                    </parameter>
                    <parameter ID="KEEP_ASPECT_RATIO" type="boolean" label="Keep Aspect Ratio" value="true">
                        <display group="View"/>
                    </parameter>
                    <parameter ID="DRAW_BUSSES" type="boolean" label="Draw Bus Nodes" value="true">
                        <display group="Draw"/>
                    </parameter>
                    <parameter ID="DRAW_BRANCHES" type="boolean" label="Draw Branches" value="true">
                        <display group="Draw"/>
                    </parameter>
                    <parameter ID="DRAW_POWER_FLOW_DIRECTION" type="boolean" label="Draw Power Flow Direction" value="true">
                        <display group="Draw"/>
                    </parameter>
                    <parameter ID="DRAW_GENERATORS" type="boolean" label="Draw Generators" value="true">
                        <display group="Draw"/>
                    </parameter>
                    <parameter ID="DRAW_OUTLINE" type="boolean" label="Draw Outline" value="true">
                        <display group="Draw"/>
                    </parameter>
                    <parameter ID="ALLOW_ZOOMING" type="boolean" label="Allow zooming" value="true">
                        <display group="Interaction"/>
                    </parameter>
                    <parameter ID="ALLOW_DRAGGING" type="boolean" label="Allow dragging" value="true">
                        <display group="Interaction"/>
                    </parameter>
                    <parameter ID="SHOW_TOOLTIPS" type="boolean" label="Show Tooltips" value="true">
                        <display group="Interaction"/>
                    </parameter>
                    <parameter ID="DRAW_BUS_NAMES" type="boolean" label="Draw bus names" value="true">
                        <display group="Draw"/>
                    </parameter>
                    <parameter ID="ICON" value="map.png"/>
                    <parameter ID="FADE_OUT_UNSELECTED" type="boolean" label="Fade out unselected elements" value="false">
                        <display group="Draw"/>
                    </parameter>
                    <model ID="busbar" label="Busbar View" description="Experimental!">
                        <parameter ID="ICON" value="hlocchart.png"/>
                    </model>
                    <model ID="contour" label="Contour Diagram" description="A geographic map displaying network parameters &lt;br&gt;as colored contours.">
                        <parameter ID="CONTOUR_ELEMENT_ID_PREFIX" type="text" label="Element Filter" description="Only includes those elements whose model ID starts with this pattern." restriction="model or class ID" empty="true">
                            <display section="Contours" group="Values"/>
                        </parameter>
                        <parameter ID="CONTOUR_PARAMETER_NAME" type="text" label="Parameter" description="The ID of a parameter whose values should be drawn." empty="true">
                            <display section="Contours" group="Values"/>
                        </parameter>
                        <parameter ID="CONTOUR_MAX_VALUE" type="double" label="Maximum value" description="The maximum value to be displayed" empty="true">
                            <display section="Contours" group="Values"/>
                        </parameter>
                        <parameter ID="CONTOUR_MIDDLE_VALUE" type="double" label="Middle value" description="The middle value to be displayed." empty="true">
                            <display decimalFormatPattern="#.##" section="Contours" group="Values"/>
                        </parameter>
                        <parameter ID="CONTOUR_MIN_VALUE" type="double" label="Minimum value" description="The minimum value to be displayed" empty="true">
                            <display decimalFormatPattern="#.##" section="Contours" group="Values"/>
                        </parameter>
                        <parameter ID="CONTOUR_MAX_DISTANCE" type="integer" label="Highlight distance" description="Maximum distance for drawing values." value="70.0">
                            <display min="0.0" section="Contours" group="Display"/>
                        </parameter>
                        <parameter ID="CONTOUR_MAX_REL_DISTANCE" type="double" label="Factor for small values" description="Controls the visibility of small values when they are in proximity of big values." value="0.93">
                            <display decimalFormatPattern="#.##" increment="0.01" max="1.0" min="0.0" section="Contours" group="Display"/>
                        </parameter>
                        <parameter ID="CONTOUR_COLOR_STEPS" type="integer" label="Color steps" description="The number of steps in the color legend. &lt;br&gt;Zero means an infinite number of steps." value="0.0">
                            <display section="Contours" group="Display"/>
                        </parameter>
                        <parameter ID="COLOR_PROVIDER" type="integer" label="Color scheme" description="The color scheme to be used." restriction="list" value="5">
                            <option value="3" label="3 Colors" ID="3"/>
                            <option value="5" label="5 Colors" ID="5"/>
                            <display section="Contours" group="Colors"/>
                        </parameter>
                        <parameter ID="CONTOUR_MAX_COLOR" type="text" label="Maximum color" description="The color for maximum values." restriction="color (RGB)" value="255,0,0">
                            <display section="Contours" group="Colors"/>
                        </parameter>
                        <parameter ID="CONTOUR_UPPER_HALF_COLOR" type="text" label="Upper half color" description="The color for values in the middle of the upper half. &lt;br&gt;Note that this setting will only have an effect in the 5 colors scheme." restriction="color (RGB)" value="255,255,0">
                            <display section="Contours" group="Colors"/>
                        </parameter>
                        <parameter ID="CONTOUR_MIDDLE_COLOR" type="text" label="Middle color" description="The color for middle values. &lt;br&gt;Note that this color will also be used for drawing the background." restriction="color (RGB)" value="255,255,255">
                            <display section="Contours" group="Colors"/>
                        </parameter>
                        <parameter ID="CONTOUR_LOWER_HALF_COLOR" type="text" label="Lower half color" description="The color for values in the middle of the lower half. &lt;br&gt;Note that this setting will only have an effect in the 5 colors scheme." restriction="color (RGB)" value="0,255,255">
                            <display section="Contours" group="Colors"/>
                        </parameter>
                        <parameter ID="CONTOUR_MIN_COLOR" type="text" label="Minimum color" description="The color for minimum values." restriction="color (RGB)" value="0,0,255">
                            <display section="Contours" group="Colors"/>
                        </parameter>
                        <parameter ID="ACTION_OUT_OF_BOUNDS" type="integer" label="Action for values out of bounds" description="Controls how values should be handled when they exceed the maximum/minimum value.&lt;br&gt;They can either be cut to the maximum/minimum value &lt;br&gt;or they can be omitted." restriction="list" value="0">
                            <option value="0" label="Cut values" ID="CUT"/>
                            <option value="1" label="Omit values" ID="OMIT"/>
                            <display section="Contours" group="Values"/>
                        </parameter>
                        <parameter ID="TRANSPARENCY" type="integer" label="Contrast" description="Sets the contrast of all colors. A higher value means a higher contrast." value="185.0">
                            <display increment="10.0" max="255.0" min="0.0" section="Contours" group="Display"/>
                        </parameter>
                        <parameter ID="ICON" value="color_management.png"/>
                    </model>
                    <model ID="map" label="Network Map" description="A geographic map displaying the network."/>
                </modelClass>
                <modelClass ID="table" label="Table">
                    <parameter ID="POSITION" value="bottom"/>
                    <model ID="type_filter" label="Data Table" description="A table containing the parameters of all elements &lt;br&gt;whose model ID matches a given pattern.">
                        <parameter ID="ELEMENT_FILTER" type="text" label="Element filter" description="&lt;html&gt;Only those elements will be displayed&lt;br&gt;whose model ID starts with this pattern." restriction="model or class ID" empty="true">
                            <display/>
                        </parameter>
                        <parameter ID="ICON" value="table.png"/>
                        <parameter ID="EXPORT_ROUND_VALUES" type="boolean" label="Round values" description="&lt;html&gt;Select this option if floating point numbers should be exported&lt;br&gt;with the precision defined in the parameter database.&lt;br&gt;Disable this option if values should not be rounded at all." value="false">
                            <display group="Export values"/>
                        </parameter>
                        <parameter ID="EXPORT_REMOVE_PERCENTAGE_SYMBOL" type="boolean" label="Convert percentage values" description="&lt;html&gt;If enabled percentage values will not be exported as such, i.e. their value&lt;br&gt;will not be multiplied by 100 and it will not contain a percentage symbol (%).&lt;br&gt;This option only has an effect if rounding of values is enabled." value="true">
                            <display group="Export values"/>
                        </parameter>
                        <parameter ID="EXPORT_CONVERT_BOOLEAN_VALUES" type="boolean" label="Convert boolean values" description="&lt;html&gt;If enabled boolean values will be exported as integers, &lt;br&gt;i.e. the values &quot;true&quot;/&quot;false&quot; will be exported as &quot;1&quot;/&quot;0&quot;." value="true">
                            <display group="Export values"/>
                        </parameter>
                        <parameter ID="EXPORT_DECIMAL_SEPARATOR" type="text" label="Decimal separator" description="&lt;html&gt;Use this character for representing decimal separators in floating point numbers.&lt;br&gt;Leave this option empty to use the system default of your operating system." empty="true">
                            <display group="Export values"/>
                        </parameter>
                        <parameter ID="EXPORT_LIST_VALUES" type="text" label="Values of list parameters" description="&lt;html&gt;Sets how the value of list parameters will be exported.&lt;br&gt;Possible values are:&lt;ul&gt;&lt;li&gt;Value: exports the value of the selected option&lt;/li&gt;&lt;li&gt;Label: exports the label of the selected option.&lt;/li&gt;&lt;li&gt;ID: exports the ID of the selected option.&lt;/li&gt;&lt;/ul&gt;" restriction="list" value="value">
                            <option value="value" label="Value" ID="VALUE"/>
                            <option value="label" label="Label" ID="LABEL"/>
                            <option value="id" label="ID" ID="ID"/>
                            <display group="Export values"/>
                        </parameter>
                        <parameter ID="IMPORT_DECIMAL_SEPARATOR" type="text" label="Decimal separator" description="&lt;html&gt;Use this character for representing decimal separators in floating point numbers.&lt;br&gt;Leave this option empty to use the system default of your operating system." empty="true">
                            <display group="Import values"/>
                        </parameter>
                    </model>
                </modelClass>
            </modelClass>
        </modelClass>
    </model-db>
</power_flow_case>
