<?xml version="1.0" encoding="US-ASCII" standalone="yes"?>
<power_flow_case xmlns="http://www.mehg.net/schema/PowerFlowAnalyzer">
    <model-db>
        <modelClass ID="conf" label="Configuration">
            <modelClass ID="viewer" label="Viewer">
                <parameter ID="TITLE" type="text" label="Title" description="The title of this viewer" empty="true">
                    <display/>
                </parameter>
                <parameter ID="POSITION" type="text" label="Position" description="&lt;html&gt;The position of this viewer.&lt;br&gt;Possible values are:&lt;ul&gt;&lt;li&gt;Left: positioned at the left&lt;/li&gt;&lt;li&gt;Bottom: positioned at the bottom&lt;/li&gt;&lt;li&gt;Free: displayed in an external window&lt;/li&gt;&lt;/ul&gt;The default position is &quot;bottom&quot;." restriction="list" empty="true">
                    <option value="left" label="Left" ID="LEFT"/>
                    <option value="bottom" label="Bottom" ID="BOTTOM"/>
                    <option value="free" label="Free" ID="FREE"/>
                    <display/>
                </parameter>
                <parameter ID="ICON" type="text" label="Icon" empty="true">
                    <display/>
                </parameter>
                <parameter ID="WIDTH" type="integer" label="Width" value="300.0">
                    <display min="10.0"/>
                </parameter>
                <parameter ID="HEIGHT" type="integer" label="Height" value="300.0">
                    <display min="10.0"/>
                </parameter>
                <modelClass ID="network" label="Network">
                    <parameter ID="POSITION" value="left"/>
                    <parameter ID="ZOOM" type="integer" label="Zoom" restriction="list" value="0" empty="false">
                        <option value="0" label="Best fit" ID="BEST_FIT"/>
                        <option value="1" label="Custom" ID="CUSTOM"/>
                        <option value="2" label="Germany" ID="GERMANY"/>
                        <display group="View"/>
                    </parameter>
                    <parameter ID="SHOW_LEGEND" type="boolean" label="Show Legend" value="true">
                        <display group="View"/>
                    </parameter>
                    <parameter ID="KEEP_ASPECT_RATIO" type="boolean" label="Keep Aspect Ratio" value="true">
                        <display group="View"/>
                    </parameter>
                    <parameter ID="DRAW_BUSSES" type="boolean" label="Draw Bus Nodes" value="true">
                        <display group="Draw"/>
                    </parameter>
                    <parameter ID="DRAW_BRANCHES" type="boolean" label="Draw Branches" value="true">
                        <display group="Draw"/>
                    </parameter>
                    <parameter ID="DRAW_POWER_FLOW_DIRECTION" type="boolean" label="Draw Power Flow Direction" value="true">
                        <display group="Draw"/>
                    </parameter>
                    <parameter ID="DRAW_GENERATORS" type="boolean" label="Draw Generators" value="true">
                        <display group="Draw"/>
                    </parameter>
                    <parameter ID="DRAW_OUTLINE" type="boolean" label="Draw Outline" value="true">
                        <display group="Draw"/>
                    </parameter>
                    <parameter ID="ALLOW_ZOOMING" type="boolean" label="Allow zooming" value="true">
                        <display group="Interaction"/>
                    </parameter>
                    <parameter ID="ALLOW_DRAGGING" type="boolean" label="Allow dragging" value="true">
                        <display group="Interaction"/>
                    </parameter>
                    <parameter ID="SHOW_TOOLTIPS" type="boolean" label="Show Tooltips" value="true">
                        <display group="Interaction"/>
                    </parameter>
                    <parameter ID="DRAW_BUS_NAMES" type="boolean" label="Draw bus names" value="true">
                        <display group="Draw"/>
                    </parameter>
                    <parameter ID="ICON" value="map.png"/>
                    <model ID="busbar" label="Busbar View" description="Experimental!"/>
                    <model ID="contour" label="Contour Diagram">
                        <parameter ID="CONTOUR_MAX_VALUE" type="double" label="Max value" empty="true">
                            <display section="Contours" group="Values"/>
                        </parameter>
                        <parameter ID="CONTOUR_MIDDLE_VALUE" type="double" label="Middle value" empty="true">
                            <display section="Contours" group="Values"/>
                        </parameter>
                        <parameter ID="CONTOUR_MIN_VALUE" type="double" label="Min value" empty="true">
                            <display section="Contours" group="Values"/>
                        </parameter>
                        <parameter ID="CONTOUR_MAX_DISTANCE" type="integer" label="Highlight distance" value="70.0">
                            <display section="Contours" group="Display"/>
                        </parameter>
                        <parameter ID="CONTOUR_MAX_REL_DISTANCE" type="double" label="Factor for small values" value="0.93">
                            <display section="Contours" group="Display"/>
                        </parameter>
                        <parameter ID="CONTOUR_COLOR_STEPS" type="integer" label="Color steps" value="0.0">
                            <display section="Contours" group="Display"/>
                        </parameter>
                        <parameter ID="CONTOUR_MAX_COLOR" type="text" label="Maximum color" restriction="color (RGB)" value="255,0,0">
                            <display section="Contours" group="Colors"/>
                        </parameter>
                        <parameter ID="CONTOUR_UPPER_HALF_COLOR" type="text" label="Upper half color" restriction="color (RGB)" value="255,255,0">
                            <display section="Contours" group="Colors"/>
                        </parameter>
                        <parameter ID="CONTOUR_MIDDLE_COLOR" type="text" label="Middle color" restriction="color (RGB)" value="255,255,255">
                            <display section="Contours" group="Colors"/>
                        </parameter>
                        <parameter ID="CONTOUR_LOWER_HALF_COLOR" type="text" label="Lower half color" restriction="color (RGB)" value="0,255,255">
                            <display section="Contours" group="Colors"/>
                        </parameter>
                        <parameter ID="CONTOUR_MIN_COLOR" type="text" label="Minimum color" restriction="color (RGB)" value="0,0,255">
                            <display section="Contours" group="Colors"/>
                        </parameter>
                    </model>
                    <model ID="map" label="Network Map" description=" Creates a new map displaying the network."/>
                </modelClass>
                <modelClass ID="table" label="Table">
                    <parameter ID="POSITION" value="bottom"/>
                    <model ID="type_filter" label="Data Table" description=" Creates a table containing the parameters &lt;br&gt;of all elements whose model ID matches a given pattern">
                        <parameter ID="ELEMENT_FILTER" type="text" label="Element filter" description="&lt;html&gt;Only those elements will be displayed&lt;br&gt;whose model ID starts with this pattern." restriction="model or class ID" empty="true">
                            <display/>
                        </parameter>
                        <parameter ID="ICON" value="table.png"/>
                        <parameter ID="EXPORT_ROUND_VALUES" type="boolean" label="Round values" description="&lt;html&gt;Select this option if floating point numbers should be exported&lt;br&gt;with the precision defined in the parameter database.&lt;br&gt;Disable this option if values should not be rounded at all." value="false">
                            <display group="Export values"/>
                        </parameter>
                        <parameter ID="EXPORT_REMOVE_PERCENTAGE_SYMBOL" type="boolean" label="Convert percentage values" description="&lt;html&gt;If enabled percentage values will not be exported as such, i.e. their value&lt;br&gt;will not be multiplied by 100 and it will not contain a percentage symbol (%).&lt;br&gt;This option only has an effect if rounding of values is enabled." value="true">
                            <display group="Export values"/>
                        </parameter>
                        <parameter ID="EXPORT_CONVERT_BOOLEAN_VALUES" type="boolean" label="Convert boolean values" description="&lt;html&gt;If enabled boolean values will be exported as integers, &lt;br&gt;i.e. the values &quot;true&quot;/&quot;false&quot; will be exported as &quot;1&quot;/&quot;0&quot;." value="true">
                            <display group="Export values"/>
                        </parameter>
                        <parameter ID="EXPORT_DECIMAL_SEPARATOR" type="text" label="Decimal separator" description="&lt;html&gt;Use this character for representing decimal separators in floating point numbers.&lt;br&gt;Leave this option empty to use the system default of your operating system." empty="true">
                            <display group="Export values"/>
                        </parameter>
                        <parameter ID="EXPORT_LIST_VALUES" type="text" label="Values of list parameters" description="&lt;html&gt;Sets how the value of list parameters will be exported.&lt;br&gt;Possible values are:&lt;ul&gt;&lt;li&gt;Value: exports the value of the selected option&lt;/li&gt;&lt;li&gt;Label: exports the label of the selected option.&lt;/li&gt;&lt;li&gt;ID: exports the ID of the selected option.&lt;/li&gt;&lt;/ul&gt;" restriction="list" value="value">
                            <option value="value" label="Value" ID="VALUE"/>
                            <option value="label" label="Label" ID="LABEL"/>
                            <option value="id" label="ID" ID="ID"/>
                            <display group="Export values"/>
                        </parameter>
                        <parameter ID="IMPORT_DECIMAL_SEPARATOR" type="text" label="Decimal separator" description="&lt;html&gt;Use this character for representing decimal separators in floating point numbers.&lt;br&gt;Leave this option empty to use the system default of your operating system." empty="true">
                            <display group="Import values"/>
                        </parameter>
                    </model>
                </modelClass>
            </modelClass>
        </modelClass>
    </model-db>
</power_flow_case>
